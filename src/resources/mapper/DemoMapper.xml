<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper   namespace="com.test.DemoMapper">
    <cache eviction="FIFO"
    ></cache>

    <resultMap id="baseResultMap" type="com.test.TestResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="age" property="age" />
    </resultMap>

    <select     id="selectAll"    parameterType="String" resultMap="baseResultMap">

        select * from user WHERE id =#{param1} and ${param3} = #{param2}

    </select>
    <insert id="insert">
        insert into user(name, age) values(#{test.name},#{test.age})
    </insert>

    <update id="update">
        update user set age = #{age} where id = #{id}
    </update>

    <select id="selectByCondition" resultType="java.util.Map">
        select <include refid="common"/> from user
        <where>
        <if test="name != null and name != ''">
            name = #{name}
        </if>
        </where>
    </select>

    <sql id="common">id,name,age</sql>
</mapper>
